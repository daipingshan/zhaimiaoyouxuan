/* pages/register/register.wxss */

page {
    width: 100%;
    height: 100%;
    background: #fff;
}

.container {
    padding: 0 40rpx;
    min-height: 100%;
}

form {
    width: 100%;
}

input {
    width: 100%;
    background: #f4f4f4;
    height: 84rpx;
    display: block;
    border: none;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    margin-bottom: 30rpx;
    border-radius: 15rpx;
}

.bank-info{
	position: relative;
}

.bank {
    line-height: 84rpx;
    border-radius: 0;
    width: 100%;
    background: #fff;
    height: 84rpx;
    display: block;
    border: none;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    margin: 60rpx 0 0;
}

.bank-list {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    background: #fff;
    position: absolute;
    z-index: 9999;
	padding:10rpx 0 30rpx 0;
}

.item {
    width: 30%;
    margin-top: 25rpx;
    text-align: center;
}

.item image {
    width: 100rpx;
    height: 100rpx;
}

.item text {
    font-size: 28rpx;
    display: block;
	margin-top:10rpx;
}

button {
    display: block;
    margin-top: 60rpx;
    width: 100%;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    background: linear-gradient(to right, #fc004a, #fc0049);
    border-radius: 15rpx;
}
.code {
    padding-right: 320rpx;
    position: relative;
	margin-bottom: 30rpx;
}
button.disable {
    background: #ccc;
    color: #fff;
}

.send {
    width: 280rpx;
    position: absolute;
    right: 0rpx;
    top: 0;
    line-height: 84rpx;
    height: 84rpx;
	font-size: 28rpx;
    background: #fff;
    color: #5f6062;
    border:1rpx solid #c0c1c4;
	margin-top: 0;
}

.voice-code {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    margin-bottom: 30rpx;
    color: #ff1849;
}
