/* pages/withdrawals/withdrawals.wxss */

page {
    width: 100%;
    height: 100%;
    background: #fff;
}

.container {
    padding: 40rpx;
    min-height: 100%;
    display: block;
}

.card-info {
    background: linear-gradient(to right, #7c82dc, #716dd1);
    padding: 60rpx 0 60rpx 60rpx;
    border-radius: 15rpx;
    margin-top: 20rpx;
    color: #fff;
    position: relative;
}

.card-info image {
    width: 150rpx;
    height: 150rpx;
}

.card-desc {
    position: absolute;
    left: 250rpx;
    top: 70rpx;
}

.card-desc text {
    display: block;
    margin-bottom: 30rpx;
}

button {
    margin-top: 30rpx;
    width: 100%;
    text-align: center;
    line-height: 90rpx;
    font-size: 36rpx;
    color: #fff;
    background: linear-gradient(to right, #fd664b, #fc1706);
    font-weight: 300;
    border-radius: 100rpx;
}

.presentrecord {
    text-align: center;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.modal-sms {
    position: fixed;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    left: 0;
    top: 0;
}

.code {
    margin: 30% 30rpx;
    background: #fff;
    border-radius: 15rpx;
    padding: 80rpx 50rpx;
}

.code-title {
    margin-bottom: 50rpx;
    padding-left: 10rpx;
    font-weight: 500;
}

.sms {
    display: flex;
    margin-left: 5rpx;
    margin-bottom: 50rpx;
}

input {
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    width: 70%;
    border-radius: 15rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    margin: 0;
    border: 1rpx solid #c0c1c4;
}

.timer {
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 50rpx;
	color: #808080;
	font-size: 28rpx;
}
