/* pages/search/search.wxss */
.product-cont {
    width: 750rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.product-cont .pro-list {
    width: 355rpx;
    font-size: 0;
    background: #fff;
    margin-bottom: 8rpx;
    margin-right: 13rpx;
    float: left;
}

.product-cont .pro-list image {
    width: 100%;
    height: 355rpx;
}

.pro-img {
    position: relative;
}

.pro-img text {
    display: block;
    position: absolute;
    line-height: 32rpx;
    min-width: 110rpx;
    text-align: center;
    font-size: 24rpx;
    right: 0;
    bottom: 0;
    background: #ffc1c1;
    z-index: 2;
    color: #fff;
}

.pro-tit {
    display: block;
    font-size: 22rpx;
    line-height: 42rpx;
    padding: 0 20rpx;
    width: 355rpx;
    box-sizing: border-box;
    color: #262626;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.price-text {
    display: block;
    line-height: 36rpx;
    padding: 0 20rpx;
    width: 355rpx;
    box-sizing: border-box;
    border-bottom: 5px solid #f1f1f1;
    overflow: hidden;
}

.pri-big {
    font-size: 22rpx;
    color: #ff1849;
    float: left;
    line-height: 36rpx;
}

.pri-big text {
    font-size: 28rpx;
    font-weight: bold;
}

.pri-sm {
    float: right;
    font-size: 18rpx;
    color: #8a8a8a;
}

.pri-sm-l {
    float: left;
    font-size: 18rpx;
    color: #8a8a8a;
}

.all .item-sort.all::after, .count .item-sort.count::after,
.price .item-sort.price::after {
    display: block;
    content: "";
    width: 56rpx;
    height: 2px;
    background: #ff1849;
    position: absolute;
    left: 50%;
    bottom: 0;
    margin-left: -28rpx;
}

.price .item-sort.price::after {
    width: 100rpx;
    margin-left: -50rpx;
}

.search-panel {
    width: 100%;
    height: 100%;
    display: block;
    position: fixed;
    background: #fff;
    z-index: 101;
    top: 110rpx;
    padding: 44rpx 80rpx 0 55rpx;
    box-sizing: border-box;
}

.sea-pan-tit {
    font-size: 30rpx;
    color: #151515;
    display: block;
    margin-bottom: 20rpx;
}

.recommend {
    overflow: hidden;
}

.recommend button, .recommend text {
    display: block;
    height: 48rpx;
    line-height: 48rpx;
    background: #f5f5f5;
    border-radius: 15rpx;
    float: left;
    text-align: center;
    font-size: 24rpx;
    color: #333;
    padding: 0 20rpx;
    margin-bottom: 30rpx;
    margin-left: 40rpx;
    border: 0;
}

.clear-history {
    text-align: center;
    height: 40rpx;
    font-size: 0;
}

.clear-history image {
    display: inline-block;
    width: 39rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 14rpx;
}

.clear-history text {
    color: #141414;
    font-size: 30rpx;
    line-height: 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.history-show {
    margin-bottom: 15rpx;
}


.goods-list {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
	background: #f1f1f1;
	justify-content: space-between;
	border-top: 5rpx solid #f1f1f1;
}

.goods-item {
    height: 660rpx;
    width: 49.7%;
    flex-wrap: wrap;
	background: #fff;
    border-bottom: 5rpx solid #f1f1f1;
	justify-content:center;
}

.goods-img image {
    margin: 18rpx;
    height: 340rpx;
    width: 340rpx;
}

.goods-detail {
    padding: 10rpx;
}

.goods-name {
    font-size: 28rpx;
	height: 120rpx;
    display: block;
}

.gain {
    margin-top: 10rpx;
    height: 40rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #ff6232;
    border: 1px solid #ff6232;
    padding:0 10rpx;
	display:inline-block;
    text-align: center;
    border-radius: 10rpx;
}

.price-num {
    margin-top: 10rpx;
    height: 40rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #808080;
    width: 100%;
}

.old-price {
    float: left;
    text-decoration: line-through;
}

.sell-num {
    float: right;
}

.now-price-num {
    position: relative;
    margin-top: 10rpx;
    height: 40rpx;
    font-size: 26rpx;
    font-weight: 500;
    line-height: 40rpx;
    color: #ff2e00;
    width: 100%;
}

.now-price {
    float: left;
}

.ticket-price {
    float: right;
    color: #fff;
    margin-right:120rpx;
}
.ticket-price text{
	z-index:9;
	position:absolute;

}

.now-price-num image {
    position: absolute;
    height: 40rpx;
    width: 130rpx;
    right: 0px;
}
