/* pages/withdrawals/withdrawals.wxss */

page {
    width: 100%;
    height: 100%;
    background: #fff;
}

.container {
    min-height: 100%;
    display: block;
}

.money {
    width: 100%;
    padding-left: 5rpx;
    padding: 40rpx;
}

.title {
    font-weight: 550;
    font-size: 30rpx;
    color: #262626;
}

.withdraw-money {
    font-size: 60rpx;
    font-weight: 600;
    text-align: center;
    margin: 30rpx auto;
    color: #141414;
}

.desc {
    font-size: 28rpx;
    color: #808080;
}

.card-info {
    padding: 15rpx 40rpx;
    color: #000;
    position: relative;
    background-color: #fdfdfd;
}

.card-info image {
    width: 50rpx;
    height: 50rpx;
	margin-top: 10rpx;
}

.card-desc {
    position: absolute;
    left: 120rpx;
    top: 20rpx;
	color:#8c8c8c;
}

.card-desc text {
    margin-right: 130rpx;
}

button {
    margin-top: 30rpx;
    width: 100%;
    text-align: center;
    line-height: 90rpx;
    font-size: 36rpx;
    color: #fff;
    background: linear-gradient(to right, #fc0050, #fc004a);
    font-weight: 300;
    border-radius: 100rpx;
    width: 90%;
}

.presentrecord {
    text-align: center;
    font-size: 28rpx;
    width: 150rpx;
    margin: 30rpx auto;
    line-height: 50rpx;
    color: #262626;
    text-decoration: underline;
}

.modal-sms {
    position: fixed;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    left: 0;
    top: 0;
}

.code {
    margin: 30% 30rpx;
    background: #fff;
    border-radius: 15rpx;
    padding: 80rpx 50rpx;
}

.code-title {
    margin-bottom: 50rpx;
    padding-left: 10rpx;
    font-weight: 500;
}

.sms {
    display: flex;
    margin-left: 5rpx;
    margin-bottom: 50rpx;
}

input {
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    width: 70%;
    border-radius: 15rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    margin: 0;
    border: 1rpx solid #c0c1c4;
}

.timer {
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 50rpx;
    color: #808080;
    font-size: 28rpx;
}
