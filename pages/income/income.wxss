/* pages/income/income.wxss */

page {
    width: 100%;
    background: #f7f7fa;
}

.header {
    background: #ce4166;
    width: 100%;
}

.header-title {
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
}

.header-info {
    display: flex;
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
    text-align: center;
    margin: 30rpx auto;
}

.header-info-item {
    width: 30%;
    color: #fff;
    font-size: 30rpx;
}

.header-item-title {
    margin-bottom: 15rpx;
}

.header-info-item button {
    border-radius: 25rpx;
    font-size: 28rpx;
    width: 100rpx;
    color: #fc0000;
    padding: 0 10rpx;
    line-height: 52rpx;
    margin-bottom: 15rpx;
}

.header-info-item text {
    font-size: 24rpx;
}

.content-day {
    margin-top: 25rpx;
    width: 100%;
    background: #fff;
}

.content-tab {
    display: flex;
    width: 100%;
    justify-content: space-around;
    text-align: center;
    font-size: 30rpx;
    background: #f7f7fa;
}

.content-tab-item {
    width: 50%;
    padding: 20rpx 0;
    color: #262626;
}

.content-tab .active {
    background: #fff;
    color: #ff2e00;
}

.content-detail {
    width: 100%;
    background: #fff;
}

.content-data {
    display: flex;
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
    text-align: center;
    margin: 30rpx auto;
    font-size: 26rpx;
    color: #262626;
}

.content-item {
    width: 30%;
}

.content-item .item-info {
    margin-bottom: 20rpx;
    font-weight: 400;
    font-size: 34rpx;
}

.content-month {
    margin-top: 25rpx;
    width: 100%;
}

.month {
    background: #fff;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    margin-bottom: 5rpx;
    color: #262626;
}

.month-title {
    font-size: 30rpx;
    padding-left: 20rpx;
    font-weight: 400;
}

.month-detail {
    width: 100%;
    background: #fff;
}

.month-detail {
    display: flex;
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
    text-align: center;
    margin: 30rpx auto;
    font-size: 26rpx;
}

.month-item {
    width: 30%;
}

.month-item .item-title {
    margin-bottom: 30rpx;
}

.month-item .item-info {
    font-size: 28rpx;
    font-weight: 400;
}

.explain {
    font-size: 26rpx;
    margin-top: 30rpx;
    color: #fc1706;
}
