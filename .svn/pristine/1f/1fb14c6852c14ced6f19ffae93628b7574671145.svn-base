// pages/orderdetails/orderdetails.js
const app = getApp();
const U = require('../../utils/util.js');
const base = app.globalData.base;
Page({
	data: {
		start_day: '',
		end_day: '',
		detail: {},
		listLen: 0,
		hideShift: true,
		state: 'all',
		sorce: 'all',
		order_status: -1,
		source: 'all',
		userLevel: '',
		page:1,
		isLast:false
	},

	onLoad: function (options) {
		wx.setNavigationBarTitle({
			title: '订单明细'
		});
		wx.setNavigationBarColor({
			frontColor: '#000000',
			backgroundColor: '#ffffff'
		})
		var curTime = new Date();
		var sevenTime = curTime.getTime() - 24 * 3600 * 6 * 1000;
		var seven = new Date(sevenTime);
		var userInfo = wx.getStorageSync('userInfo')
		this.setData({
			end_day: curTime.getFullYear() + "-" + (curTime.getMonth() * 1 + 1) + "-" + curTime.getDate(),
			start_day: seven.getFullYear() + "-" + (seven.getMonth() * 1 + 1) + "-" + seven.getDate(),
			userLevel: parseInt(userInfo.level)
		});

		if(options.start_day){
			this.setData({
				start_day: options.start_day
			});
		}
		if(options.end_day){
			this.setData({
				end_day: options.end_day
			});
		}

		var token = wx.getStorageSync('token');
		if (token) {
			this.token = token;
		}
		this.getOrder();
	},

	shiftAction() {
		var hideShift = this.data.hideShift;
		this.setData({
			hideShift: !hideShift
		})
	},

	getOrder() {
		wx.showLoading({
			title: '加载中',
		})
		var that = this, data = {};
		data.start_day = this.data.start_day;
		data.end_day = this.data.end_day;
		if (this.token) {
			data.token = this.token;
		}
		if (this.data.source) {
			data.source = this.data.source;
		}
		if (this.data.order_status || this.data.order_status == 0) {
			data.order_status = this.data.order_status;
		}
		var page = that.data.page;
		data.page = page == 0 ? 1 : page;
		wx.request({
			url: base + '/Order/index',
			data: data,
			success(res) {
				var detail = res.data.data;
				console.log(detail);
				var list = detail.list;
				
				if (list.length < 20) {
					that.setData({
						isLast: true
					})
				}
				var eList = [];
				var curList = that.data.detail.list;
				if (curList && curList.length > 0) {
					eList = curList.concat(list);
				} else {
					eList = list;
				}

				eList.map((v, i) => {
					eList[i].goods_name = U.subString(v.title, 60)+'...';
					eList[i].add_time_trans = U.ftime(v.add_time);
					if (v.settle_time > 0) {
						eList[i].settle_time_trans = U.ftime(v.settle_time);
					}
				});
				detail.list = eList;
				detail.total_num = parseInt(detail.total_num) ? detail.total_num:'-';
				detail.total_money =parseFloat(detail.total_money) ? '¥'+detail.total_money : '-';
				detail.total_commission = parseFloat(detail.total_commission) ? '¥'+detail.total_commission : '-';
				that.setData({
					detail: detail,
					listLen: detail.list.length
				});
				wx.hideLoading()
				if (that.onPullDown) {
					that.onPullDown = false;
					wx.stopPullDownRefresh();
				}
			}
		})
	},

	onReachBottom() {
		if (!this.data.isLast) {
			var page = this.data.page;
			page += 1;
			console.log(page)
			this.setData({
				page: page
			})
			this.getOrder();
		} else {
			wx.showToast({
				title: '暂无更多数据',
				icon: 'none',
				duration: 2000
			})
		}
	},

	startChange(e) {
		var val = e.detail.value;
		this.setData({
			start_day: val,
			page : 1,
			isLast:false,
			detail: {}
		})
		this.getOrder();
	},

	endChange(e) {
		var val = e.detail.value;
		this.setData({
			end_day: val,
			page: 1,
			isLast: false,
			detail: {}
		})
		this.getOrder();
	},

	changeState(e) {
		var ltype = e.target.dataset.type;
		this.setData({
			state: ltype,
			page: 1,
			isLast: false
		})
		this.order_status = ltype;
	},

	changeSorce(e) {
		var ltype = e.target.dataset.type;
		switch (ltype) {
			case 'all':
				this.setData({
					sorce: ltype
				});
				this.source = 'all';
				break;
			case 'self':
				this.setData({
					sorce: ltype
				})
				this.source = 'self';
				break;
			case 'son':
				this.setData({
					sorce: ltype
				})
				this.source = 'son';
				break;
			case 'group_leader':
				this.setData({
					sorce: ltype
				})
				this.source = 'group_leader';
				break;
			case 'partner':
				this.setData({
					sorce: ltype
				})
				this.source = 'partner';
				break;
		}
	},

	ensure() {
		this.setData({
			hideShift: true,
			source: this.source,
			order_status: this.order_status,
			page: 1,
			isLast: false,
			detail: {}
		});
		this.getOrder();
	},

	hideShiftAct() {
		this.setData({
			hideShift: true
		})
	},

	onPullDownRefresh() {
		this.onPullDown = true;
		this.setData({
			page: 1,
			isLast:false,
			detail:{}
		})
		this.getOrder();
	}
})