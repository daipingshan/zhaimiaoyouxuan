/* pages/myPayInfo.wxss */

.pay-info {
  width: 100%;
  font-size: 24rpx;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #bc0031;
  padding: 30rpx 0;
}

.pay-info .box {
  width: 92%;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  margin: 30rpx auto;
}

.user-info .user-img {
  width: 100%;
  text-align: center;
}

.user-info .user-img image {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx auto;
  border-radius: 50%;
}

.user-info .nick-name {
  width: 200rpx;
  height: 50rpx;
  margin: 10rpx auto;
  font-size: 30rpx;
  text-align: center;
}

.user-form {
  width: 100%;
  border: 1px solid #ccc;
  position: relative;
  margin: 30rpx 0;
}

.user-form .my-info {
  width: 200rpx;
  height: 50rpx;
  font-size: 30rpx;
  position: absolute;
  top: -25rpx;
  left: 50%;
  margin-left: -100rpx;
  z-index: 10;
  background: #fff;
  text-align: center;
  font-weight: bold;
}

.user-form .subsidy-statement {
  margin: 30rpx;
}

.user-form .subsidy-statement text {
  color: #bc0031;
}

.user-form .save,.submit-order .submit {
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #bc0031;
  color: #fff;
  text-align: center;
  font-weight: bold;
  border-radius: 30rpx;
  margin: 30rpx auto;
}

.user-form .update {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #bc0031;
  color: #fff;
  position: absolute;
  left: 50%;
  bottom: -30rpx;
  margin-left: -100rpx;
  text-align: center;
  font-weight: bold;
  border-radius: 30rpx;
}

.user-form .info{
  margin: 10rpx 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  border-bottom:2px solid #eee;
}

.submit-order .order-sn{
  margin: 30rpx;
  height: 50rpx;
}

.submit-order .order-sn input{
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #dbdbdb;  
  border-top:0px;  
  border-left:0px;  
  border-right:0px;
}

.order-list-info{
  margin: 30rpx;
  display: block;
  height: 50rpx;
}

.order-list-info view{
    width: 25%;
    float: left;
    text-align: center;
    font-weight: 500;
}

.border-bottom{
  border-bottom: 1px solid #ccc
}

.order-explain{
  margin: 30rpx;
  line-height: 40rpx;
  color: #bc0031;
}
.tip{
   margin: 30rpx 50rpx;
}

.tip view{
  line-height: 40rpx;
}

.line{
  width: 92%;
  margin: 50rpx auto;
  position: relative;
  height: 2rpx;
  background: #000;
}

.line view{
  width: 200rpx;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  position: absolute;
  background: #bc0031;
  text-align: center;
  top: -25rpx;
  left:50%;
  z-index: 10;
  margin-left: -100rpx;

}
