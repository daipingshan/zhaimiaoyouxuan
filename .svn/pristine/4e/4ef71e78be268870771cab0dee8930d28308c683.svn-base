/**index.wxss**/

page {
    width: 100%;
    background: #f7f7fa;
}

.slide-banner swiper-item {
    width: 100%;
    height: 350rpx;
}

.fixed-banner {
    display: flex;
    flex-wrap: wrap;
}

.slide-image {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
}

.banner-image {
    width: 100%;
    height: 170rpx;
    padding: 0;
    margin: 0;
}

.switch-content {
    width: 100%;
    background: #fff;
}

.switch-content .switch-tab {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-around;
    font-size: 30rpx;
    background: #f9f7fb;
    height: 100rpx;
}

.switch-content .switch-tab .item {
    width: 50%;
    text-align: center;
    padding: 0;
}

.switch-content .switch-tab .item image {
    width: 100%;
    height: 100%;
}

.search {
    width: 100%;
    box-sizing: border-box;
    height: 124rpx;
    padding: 30rpx 50rpx;
    left: 0;
    z-index: 9999;
}

.search-box {
    position: relative;
    font-size: 0;
}

.search image.search-icon {
    position: absolute;
    width: 35rpx;
    height: 35rpx;
    left: 180rpx;
    top: 20rpx;
    z-index: 3;
}

.search input {
    color: #b5b3b4;
    background: #f7f7f7;
    width: 100%;
    height: 70rpx;
    display: block;
    line-height: 70rpx;
    border-radius: 12rpx;
    box-sizing: border-box;
    padding-left: 64rpx;
    font-size: 28rpx;
    text-align: center;
}

.tab-cate {
    position: relative;
    background: #fff;
    width: 100%;
    z-index: 99;
    box-shadow: 1rpx 2rpx 4rpx 0rpx #adadad;
}

.tab-cate-top {
    position: fixed;
    background: #fff;
    width: 100%;
    top: 0;
    z-index: 99;
    box-shadow: 1rpx 2rpx 4rpx 0rpx #adadad;
}

.tab-h {
    height: 65rpx;
    width: 90%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 55rpx;
    background: #fff;
    display: flex;
    white-space: nowrap;
    left: 0;
    z-index: 99;
}

.menu_more {
    width: 65rpx;
    height: 65rpx;
    background: #fff;
    right: 0;
    top: 120rpx;
    z-index: 9;
    position: absolute;
}

.menu_more image {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}

.tab-item {
    margin: 0 20rpx;
    display: inline-block;
    color: #7c7b7c;
    font-size: 28rpx;
    font-weight: 400;
}

.tab-item text {
    display: inline-block;
    width: 100rpx;
    height: 100%;
    text-align: center;
}

.tab-item.active {
    color: #ff1849;
    position: relative;
    font-weight: 500;
    font-size: 32rpx;
}

.tab-item.active:after {
    content: "";
    display: block;
    height: 5rpx;
    width: 100%;
    background: #ff1849;
    position: absolute;
    bottom: 0;
    left: 0rpx;
    border-radius: 16rpx;
    text-align: center;
}

.tab-content {
    width: 100%;
}

.goods {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
}

.goods-list {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: #f7f7f7;
}

.other .goods-list {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background: #f1f1f1;
    justify-content: space-between;
}

.goods-item {
    height: 260rpx;
    flex-wrap: nowrap;
    margin-bottom: 5rpx;
    background-color: #fff;
    width: 100%;
}

.other .goods-item {
    height: 640rpx;
    width: 49.7%;
    flex-wrap: wrap;
    background: #fff;
    border-bottom: 4rpx solid #f1f1f1;
    justify-content: center;
    padding: 0;
    margin: 0;
}

.goods-img {
    float: left;
    width: 240rpx;
}

.other .goods-img {
    float: none;
    width: auto;
    display: flex;
    justify-content: space-around;
    padding: 16rpx;
}

.goods-img image {
    margin: 20rpx;
    height: 220rpx;
    width: 220rpx;
}

.other .goods-img image {
    margin: 0;
    padding: 0;
    height: 340rpx;
    width: 340rpx;
}

.goods-detail {
    float: right;
    padding: 15rpx 20rpx 10rpx 20rpx;
    width: 470rpx;
}

.other .goods-detail {
    padding: 10rpx;
    width: 94%;
}

.goods-name {
    font-size: 28rpx;
    height: 80rpx;
    display: block;
    line-height: 38rpx;
    overflow: hidden;
}

.goods-name .topCate {
    color: #fff;
    background: #fc4a54;
    font-size: 22rpx;
    line-height: 35rpx;
    width: 55rpx;
    display: inline-block;
    text-align: center;
    border-radius: 40rpx;
    float: left;
    margin-top: 2rpx;
    margin-right: 10rpx;
}

.other .goods-name {
    font-size: 28rpx;
    height: 120rpx;
    display: block;
}

.gain {
    height: 40rpx;
    line-height: 40rpx;
    color: #8c8c8c;
    display: inline-block;
    font-weight: 350;
    text-decoration: line-through;
}

.gain-leader {
    margin-top: 10rpx;
    height: 40rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #ff6232;
    border: 1px solid #ff6232;
    padding: 0 10rpx;
    display: inline-block;
    text-align: center;
    border-radius: 10rpx;
    font-weight: 350;
}

.price-num {
    margin-top: 10rpx;
    position: relative;
    height: 40rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #808080;
}

.now-price {
    color: red;
}

.sell-num {
    height: 40rpx;
    line-height: 40rpx;
    color: #8c8c8c;
    display: inline-block;
    position: absolute;
    right: 0;
    font-weight: 350;
}

.goods-extend {
    position: relative;
    margin-top: 10rpx;
    height: 40rpx;
    font-size: 26rpx;
    font-weight: 500;
    line-height: 40rpx;
    color: #8c8c8c;
    width: 100%;
}

.ticket-price {
    float: right;
    color: #fff;
    position: relative;
}

.other .ticket-price {
    float: right;
    color: #fff;
    position: relative;
}

.price-num image {
    height: 40rpx;
    width: 130rpx;
    right: 0px;
    z-index: -1;
}

.ticket-price text {
    z-index: 10;
    position: absolute;
    left: 60rpx;
    color: #ff1849;
    text-align: left;
}

.other .ticket-price text {
    z-index: 10;
    position: absolute;
    left: -75rpx;
    color: #ff1849;
    text-align: left;
}

.other .price-num image {
    position: absolute;
    height: 40rpx;
    width: 130rpx;
    right: 0px;
    z-index: 1;
}

.modal-box {
    width: 100%;
    background: #fff;
    overflow: hidden;
    position: absolute;
    z-index: 999;
    box-shadow: 2rpx 4rpx 6rpx #808080;
    top: 120rpx;
}

.modal-shadow {
    width: 100%;
    height: 1500rpx;
    background: rgba(0, 0, 0, 0.5);
    position: absolute;
    top: 120rpx;
}

.modal-body {
    position: relative;
}

.modal-title {
    border-bottom: 2rpx solid #f1f1f1;
    height: 80rpx;
    text-align: center;
    position: relative;
}

.modal-title text {
    line-height: 80rpx;
    color: #7c7b7c;
    font-size: 28rpx;
    font-weight: 350;
}

.modal-title image {
    width: 35rpx;
    height: 35rpx;
    background: #fff;
    margin: 20rpx;
    float: right;
    position: absolute;
    right: 0;
}

.modal-content {
    padding: 15rpx 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.modal-content .cate-item {
    width: 20%;
    height: 70rpx;
    text-align: center;
    margin: 15rpx;
    font-size: 28rpx;
    font-weight: 350;
}

.cate-item text {
    line-height: 70rpx;
    border: 2rpx solid #eee;
    width: 130rpx;
    display: inline-block;
    height: 70rpx;
    border-radius: 15rpx;
}

.cate-item.active {
    color: #ff2e00;
}

.sort-cont {
    background: #fff;
    width: 100%;
    height: 70rpx;
    display: flex;
    z-index: 100;
    box-shadow: 1rpx 2rpx 4rpx 0rpx #adadad;
}

.item-sort {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #141414;
    line-height: 67rpx;
    position: relative;
}

.item-sort image {
    width: 20rpx;
    height: 25rpx;
    margin-left: 10rpx;
    position: relative;
    top: 2rpx;
    display: none;
}

.item-sort.up .up, .item-sort.down .down, .item-sort.default .default,
.item-sort.iup .up, .item-sort.idown .down, .item-sort.idefault .default {
    display: inline-block;
}

.all .item-sort.all::after, .count .item-sort.count::after,
.price .item-sort.price::after, .income .item-sort.income::after {
    content: "";
    display: block;
    height: 5rpx;
    width: 70%;
    background: #ff1849;
    position: absolute;
    bottom: 0;
    left: 15%;
    border-radius: 16rpx;
    text-align: center;
}
